<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Last Documents from Collections</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Optional: Link to your CSS file -->
</head>
<body>
    <h1>Last Documents from Collections</h1>
    <ul>
        <% for (const [collectionName, lastDoc] of Object.entries(lastDocs)) { %>
            <li>
                <strong>Collection: <%= collectionName %></strong>
                <div>
                    <% if (lastDoc) { %>
                        <h3>Last Document:</h3>
                        <pre><%= JSON.stringify(lastDoc, null, 2) %></pre>
                    <% } else { %>
                        <span>No documents found in this collection.</span>
                    <% } %>
                </div>
            </li>
        <% } %>
    </ul>
</body>
</html>