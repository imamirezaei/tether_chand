<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tether Prices</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
      }
      h1 {
        text-align: center;
        margin: 20px 0;
      }
      .container {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin: 20px;
      }
      .exchange-box {
        background-color: #fff;
        padding: 20px;
        margin: 10px;
        width: 300px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
      .exchange-box h2 {
        font-size: 1.5rem;
        margin-bottom: 10px;
      }
      .exchange-box p {
        margin: 5px 0;
      }
      .exchange-box .price {
        font-size: 1.2rem;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>Tether Prices</h1>

    <div class="container">
      <% exchangeRates.forEach(rate => { %>
      <div class="exchange-box">
        <h2><%= rate.exchangeName %></h2>
        <p><strong>Buy Price:</strong> <%= rate.buyPrice %></p>
        <p><strong>Sell Price:</strong> <%= rate.sellPrice %></p>
        <p><strong>Updated At:</strong> <%= rate.updatedAt %></p>
        <h3>Full API Response:</h3>
        <pre><%= JSON.stringify(rate.data, null, 2) %></pre>
      </div>
      <% }) %>
    </div>
  </body>
</html>
