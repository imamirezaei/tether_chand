<html dir="rtl" lang="fa">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>Gift Card Purchase Test</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@400;700&display=swap" rel="stylesheet"/>
    <style>
        body {
            font-family: 'Vazirmatn', sans-serif;
        }
        .shadow-fade {
            transition: box-shadow 0.3s ease-in-out;
        }
        .shadow-fade:hover {
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1), 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body class="bg-gray-100">
<div class="container mx-auto p-4">
    <header class="flex justify-between items-center mb-4">
        <div class="text-2xl font-bold">تتر چند</div>
    </header>
    <div class="bg-white p-4 rounded-lg shadow shadow-fade">
        <table class="w-full text-right">
            <thead>
            <tr class="border-b">
                <th class="py-2">نام صرافی</th>
                <th class="py-2">قیمت فروش</th>
                <th class="py-2">قیمت خرید</th>
                <th class="py-2"></th>
            </tr>
            </thead>
            <tbody>
            <% exchangeRates.forEach(data => { %>
                <tr class="border-b">
                    <td class="py-2"><%= data.exchangeName %></td>
                    <td class="py-2"><%= data.sell_px.toLocaleString() %> تومان</td>
                    <td class="py-2"><%= data.buy_px .toLocaleString() %> تومان</td>
                    <td class="py-2">
                        <button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 w-full">خرید</button>
                    </td>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div>
</div>
</body>
</html>